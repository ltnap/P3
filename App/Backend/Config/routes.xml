<?xml version="1.0" encoding="utf-8" ?>
<routes>

    <!--    ADMINISTRATION  -->
    <route url="/admin/" module="News" action="index" />

    <!--    USERS   -->

    <route url="/admin/users/" module="Users" action="index" />

    <route url="/admin/users-rights-([0-9]+)\.html" module="Users" action="modifyRights" vars="id" />

    <route url="/admin/users-delete-([0-9]+)\.html" module="Users" action="deleteUser" vars="id" />



    <!--    NEWS    -->
    <route url="/admin/news-insert\.html" module="News" action="insert" />

    <route url="/admin/news-update-([0-9]+)\.html" module="News" action="update" vars="id" />

    <route url="/admin/news-delete-([0-9]+)\.html" module="News" action="delete" vars="id" />


    <!--     COMMENTS     -->
    <route url="/admin/comments/" module="Comments" action="index" vars="id" />

    <route url="/admin/comment-update-([0-9]+)\.html" module="Comments" action="updateComment" vars="id" />

    <route url="/admin/comment-delete-([0-9]+)\.html" module="Comments" action="deleteComment" vars="id" />

</routes>